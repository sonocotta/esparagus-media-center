{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "ESP-IDF 4.4.7: Open Shell in Container",
			"type": "shell",
			"command": "docker",
			"args": [
				"run",
				"-it",
				"--rm",
				"--privileged",
				"-v",
				"${workspaceFolder}/firmware/squeezelite-esp32:${workspaceFolder}/firmware/squeezelite-esp32",
				"-v",
				"/dev:/dev",
				"-w",
				"${workspaceFolder}/firmware/squeezelite-esp32",
				"espressif/idf:v4.4.7",
				"bash",
				"-c",
				". $IDF_PATH/export.sh && pip install protobuf grpcio-tools && exec bash"
			],
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated"
			},
			"isBackground": false
		},
