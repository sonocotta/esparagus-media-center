{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "ESP-IDF 4.3.5 (sle118): Open Shell in Container",
			"type": "shell",
			"command": "docker",
			"args": [
				"run",
				"-it",
				"--rm",
				"--privileged",
				"-v",
				"${workspaceFolder}/firmware/squeezelite-esp32:${workspaceFolder}/firmware/squeezelite-esp32",
				"-v",
				"/dev:/dev",
				"-w",
				"${workspaceFolder}/firmware/squeezelite-esp32",
				"sle118/squeezelite-esp32-idfv435",
				"bash",
				"-c",
				". /opt/esp/python_env/idf4.3_py3.8_env/bin/activate && pip install --upgrade protobuf grpcio-tools && exec bash"
			],
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated"
			},
			"isBackground": false
		},
		{
			"label": "Serve Web Installer",
			"type": "shell",
			"command": "python3 -m http.server 8008 -d docs",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}