		{
			"label": "Serve Web Installer",
			"type": "shell",
			"command": "python3 -m http.server 8008 -d docs",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "ESPHome: Build Current File",
			"type": "shell",
			"command": "docker",
			"args": [
				"run",
				"--rm",
				"-v",
				"${fileDirname}:/config",
				"-v",
				"${workspaceFolder}/firmware/esphome/secrets/secrets.yaml:/config/secrets.yaml",
				"-v",
				"${workspaceFolder}/.esphome-cache:/cache",
				"-e",
				"PLATFORMIO_BUILD_CACHE_DIR=/cache/.pio-cache",
				"-it",
				"esphome/esphome:dev",
				"compile",
				"/config/${fileBasename}"
			],
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "ESPHome: Build and Upload OTA (Stable)",
			"type": "shell",
			"command": "docker",
			"args": [
				"run",
				"--rm",
				"--network=host",
				"-v",
				"${fileDirname}:/config",
				"-v",
				"${workspaceFolder}/firmware/esphome/secrets/secrets.yaml:/config/secrets.yaml",
				"-v",
				"${workspaceFolder}/.esphome-cache:/cache",
				"-e",
				"PLATFORMIO_BUILD_CACHE_DIR=/cache/.pio-cache",
				"-it",
				"esphome/esphome:latest",
				"run",
				"/config/${fileBasename}",
				"--device",
				"OTA"
			],
			"problemMatcher": []
		},
		{
			"label": "ESPHome: Build and Upload OTA (Develop)",
			"type": "shell",
